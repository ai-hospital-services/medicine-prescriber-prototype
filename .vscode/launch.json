    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: api",
            "type": "python",
            "request": "launch",
            "module": "api.app",
            "justMyCode": true,
            "cwd": "${workspaceFolder}/backend",
            "env": {
                "FLASK_DEBUG": "1",
                "MONGODB_URL": "mongodb://user:password@localhost:27017/ai_hospital_services?authMechanism=DEFAULT&authSource=ai_hospital_services"
            },
            "args": [
                "--debug-mode=true",
                "--port=8080"
            ]
        },
        {
            "name": "Python: pytest",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "justMyCode": true,
            "cwd": "${workspaceFolder}/backend",
            "args": [
                "-v",
                "--cov=api"
            ]
        },
    ]
}